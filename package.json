{
  "name": "zzz-data-monorepo",
  "type": "module",
  "version": "0.0.0",
  "packageManager": "pnpm@10.18.1",
  "scripts": {
    "prepare": "simple-git-hooks",
    "up": "taze latest -I -f",
    "prettier": "prettier --write .",
    "lint": "eslint .",
    "data:build": "pnpm -C packages/zzz-data run build",
    "data:scrape": "pnpm -C packages/zzz-data run scrape",
    "data:generate": "pnpm -C packages/zzz-data run generate",
    "data:release": "pnpm -C packages/zzz-data run release",
    "server:dev": "pnpm -C packages/server run dev",
    "server:deploy": "pnpm -C packages/server run deploy",
    "release": "bumpp -r && pnpm run data:release"
  },
  "devDependencies": {
    "@ayingott/eslint-config": "^2.0.7",
    "@ayingott/prettier-config": "^2.1.8",
    "bumpp": "^10.3.1",
    "eslint": "^9.37.0",
    "lint-staged": "^16.2.3",
    "pnpm": "^10.18.1",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.13.1",
    "taze": "^19.7.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged"
  },
  "lint-staged": {
    "*": [
      "eslint --fix",
      "prettier --write --ignore-unknown"
    ]
  },
  "prettier": "@ayingott/prettier-config"
}
